<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlmostThereActivity"
    android:background="@color/birulangit">
    <TextView
        android:id="@+id/tulisan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/almost"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for registerubf withus One more step"
        android:layout_centerHorizontal="true"
        android:id="@+id/tulisan2"
        android:layout_below="@+id/tulisan1"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="you need to check youremail"
        android:layout_centerHorizontal="true"
        android:id="@+id/tulisan3"
        android:layout_below="@+id/tulisan2"
        android:textColor="@color/white"
        android:paddingStart="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to active your acount"
        android:layout_centerHorizontal="true"
        android:id="@+id/tulisan4"
        android:layout_below="@+id/tulisan3"
        android:textColor="@color/white"
        android:paddingStart="20dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp"
        android:background="@color/birulangit"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            tools:context=".MainActivity"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/veri"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="@string/verifikasi"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>